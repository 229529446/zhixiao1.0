<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity">

    <!-- 时间 -->

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#C0D9D9"
        android:text="2015 0809 22:00"
        android:textColor="#FFFFFF"
        android:padding="3dp"
        android:textSize="12sp" />
    <!-- 头像 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/account_fromnick"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minzi"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/content"
                android:layout_gravity="right"
                android:background="@drawable/outgoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="290dp"
                android:text="马云aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>


        <com.example.administrator.zhixiao10.view.CustomImageView
            android:id="@+id/head"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:src="@drawable/touxiang"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>