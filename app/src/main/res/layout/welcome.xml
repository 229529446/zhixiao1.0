<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@drawable/bagg"
    >


    <LinearLayout
        android:id="@+id/width"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="#00000000"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center"
        >


        <LinearLayout
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <Button
                    android:id="@+id/login_page_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0fff"
                    android:text="登录"
                    android:textSize="23dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/register_page_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0fff"
                    android:text="注册"
                    android:textSize="23dp"
                    android:layout_weight="1"/>
         </LinearLayout>





        <com.example.administrator.zhixiao10.view.NoScrollViewPager
            android:id="@+id/denluzhuce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1ffffff"
            >

        </com.example.administrator.zhixiao10.view.NoScrollViewPager>

        </LinearLayout>

    </LinearLayout>






</LinearLayout>
